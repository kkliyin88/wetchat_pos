.back{
	height: 100rpx;
	width: 100rpx;
	position: fixed;
	top: 60rpx;
	z-index: 9999;
}
.wrap{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

page{
	background: rgb(244,246,255);
} 
.head_wrap{
	position: fixed;
	top: -30rpx;
	background: #4e6ef5;
	border-radius: 30rpx;
	width: 100%;
	z-index: 999;
}
.condition_box{
	height: 82rpx;
	line-height: 82rpx;
	font-size: 30rpx;
	font-weight:bold;
	flex: 1;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	color:rgba(244,246,255,1);
	padding: 0 25rpx;
}
.empty{
	z-index: -1;
}
.table_box{
	flex: 1;
	z-index: 1000;
	margin: 20rpx 3%;
	border-radius:30rpx;
	box-sizing: border-box;
	position: relative;
	overflow: scroll;
}
.title_box{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	color:#999 ;
	font-weight:500;
	font-size:30rpx;
	height: 90rpx;
	line-height: 90rpx;
	width: 100%;
	background:rgba(244,246,255,1);
	border-radius:30rpx 30rpx 0 0;
	position: fixed;
	width: 94%;
	box-sizing: border-box;
}
.table_content{
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	flex: 1;
	overflow: scroll;
	padding-top: 90rpx;
}
.tr{
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	height: 90rpx;
	line-height: 90rpx;
	color: #666666;
}
.td{
	font-size:28rpx;
	vertical-align: center;
	text-align: center;
}
.topThree{
	color:#5E73F5 ;
}
.th0,.td0{
	width: 100rpx;
	text-align: center;
}
.th1,.td1{
	width: 200rpx;
	flex: 1;
	text-align: center;
}
.th2,.td2{
	width: 200rpx;
	text-align: center;
}

.tr0{
	background:rgba(250,251,255,1);	
}
.tr1{
	background:white;	
}


.pop{
	width: 100%;
	height: 100vh;
	position: fixed;
	top: 0;
	z-index: 1000;
	background: #FFF;
}
.pop_head{
	height: 200rpx;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	font-weight:bold;

}
.pop_title{
	width:100%;
	height:34rpx;
	font-size:36rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(102,102,102,1);
	text-align: center;
}
	
.pop_content{
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	margin-top: 80rpx;
}
.pop_content_text{
	height:80rpx;
	line-height: 80rpx;
	padding: 0 20rpx;
	border-radius:40px;
	font-weight:500;
	color: #999999;
	border:1px solid rgba(204,204,204,1);
}
.pop_content_text_active{
	 background:  linear-gradient( #8F81F7,#4E6EF5);
	 color: #FFF;
}
.pop_sumit{
	margin-top: 200rpx;
	height:80px;
	width: 100%;
}
.pop_btn{
	margin: 0 30rpx;
	height:80rpx;
	line-height:80rpx ;
	background: linear-gradient( #8F81F7,#4E6EF5);
	border-radius:40rpx;
	color: #FFF;
	font-size:30rpx;
	font-weight:500;
	text-align: center;
}