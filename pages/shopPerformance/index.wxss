/* pages/shopPerformance/index.wxss */

  
.container1{
  height: 325rpx;
  width: 100%;
  background:linear-gradient(181deg,rgba(145,158,247,1) 0%,rgba(93,105,231,1) 100%);
  border-radius:0px 0px 20px 20px;
  position: fixed;
  top: 0;
}


.condition_wrap{
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin:0 22rpx;
}
.condition{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  text-align: center;
}
.condition_item{
	margin-left: 15rpx;
	background:rgba(153,165,243,1);
	font-size: 24rpx;
	border-radius:6rpx;
	color: #FFF;
	padding: 10rpx;
	z-index: 999;
}
.perform_title{
  color: #FFF;
  font-size: 30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  display: inline-block;
  position: absolute;
  left:22rpx;
}
.select_box{
  margin: 0 10rpx;
  background: rgb(153, 165,243);
  border-radius: 10rpx;
}
.sale_box text{
height:33rpx;
line-height:33rpx;
font-size:24rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(115,127,238,1);
margin: 12rpx 0;
}
.li_box{
 height:178rpx;
background:rgba(255,255,255,1);
box-shadow:0px 2px 8px 0px rgba(209,212,243,1);
border-radius:24rpx;
margin: 10rpx 22rpx;
padding: 15rpx;
position: relative;
}
.container2{
  padding: 0 10rpx;
  margin-top: 150rpx;
  z-index: 2;
}
.li_box .title{
height:42rpx;
font-size:30rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(0,5,55,1);
line-height:42rpx;

}

.li_box image{
  height: 30rpx;
  width: 30rpx;
  position: absolute;
  right: 22rpx;
  top:60rpx;
}

.li_box .progress{
  margin-top: 12rpx;
}



