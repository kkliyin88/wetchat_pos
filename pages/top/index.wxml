<view class='wrap'>
  <top title='畅销商品排行' bind:goback='goback'></top>
</view>
<view class='condition_wrap'>
  <view class='condition'>
    <select prop-array='{{saleTypeArray}}' bind:change-select='change' key='statisticalMode' class='select_box' placeholder='销售类型'></select>
    <select prop-array='{{areaList}}' nowText='{{query.regionCode}}' class='select_box' placeholder='区域'></select>
     <select prop-array='{{dateTypeArray}}' nowText='{{query.dateType}}' class='select_box' placeholder='日期类型'></select>
     <text bindtap='search'>查询</text>
  </view>
</view>
<view class='table_box'>
  <table columns='{{columns}}' listData="{{pageData}}"></table>
</view>