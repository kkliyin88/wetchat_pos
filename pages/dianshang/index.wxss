 height: 100%;
  width: 100%;
}

.page_wrap {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  width: 100%;
  border: 1px solid green;

}
.head_wrap {
  position: fixed;
  top: -30rpx;
  background: #4e6ef5;
  border-radius: 30rpx;
  height: 360rpx;
  width: 100%;
  z-index: 999;
}
.content_wrap {
  border: 1px solid green;
  height: 300rpx;
}

.middle {
  width: 100%;
  flex: 1;
  overflow-y: scroll;
  margin-bottom: 120rpx;
}

.footer {
  height: 98rpx;
  position: fixed;
  z-index: 1000;
  bottom: 0;
}

.title {
  text-align: center;
  margin-top: 62rpx;
  color: #fff;
  margin-bottom: 30rpx;
}

.condition_box {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.condition {
  display: inline-block;
}

.condition_be {
  margin-left: 180rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}
.echart_box {
  height: 350rpx;
  position: relative;
  margin: 0 25rpx;
  margin-top: 30rpx;
  background: #fff;
  border-radius: 20rpx;
}
.echart_cover{
	height: 350rpx;
	width: 100%;
	position: absolute;
	z-index: 1000;
}
.table_box {
  background: #fff;
  border-radius: 20rpx;
  margin: 30rpx 25rpx;
}

.table_title text {
  color: #666;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}

