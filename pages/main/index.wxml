<!--pages/main/index.wxml-->
<view class='wrap'>
  <header title='终端赢利监控' condition="{{condition}}" bind:changeCondition='changeCondition'></header>
   <view class='header2' style="margin-top:{{statusBarHeight+360+'rpx'}}">
    <view class="{{activeIndex==item.index?'content1':'content2'}} 'box'" bindtap='changeActiveIndex' wx:for='{{contentList1}}' wx:key='{{item.index}}' data-index='{{item.index}}'>
      <view class='line line1'>
        <view class='text_box'>
          <text>{{item.name}}</text>
        </view>
        <view class='text_box'>
          <image wx:if='{{item.samePercentage}}' src="{{imgBaseUrl+'/up.png'}}"></image>
          <text class='percent_text'>{{item.samePercentage}}</text>
        </view>
      </view>
      <view class='line line2'>
        <view class='text_box'>
          <text>{{item.value}}</text>
        </view>
        <view class='text_box'>
          <text>万</text>
        </view>
      </view>
    </view>
  </view>
  <view class='middle'>
    <scroll-view scroll-y="true"  class='scroll_box'>
      <view class="echart_box">
        <ec-canvas id="mychart-one" canvas-id="mychart-multi-one" ec="{{econe}}"></ec-canvas>
      </view>
      <view class="echart_box">
        <ec-canvas id="mychart-two" canvas-id="mychart-multi-two" ec="{{ectwo}}"></ec-canvas>
      </view>
      <view class='table_box'>
        <table listData='{{tableData}}' title='财务数据(单位:万)' columns='{{columns}}'></table>
      </view>
    </scroll-view>
  </view>
  <view class='footer'>
    <tabbar></tabbar>
  </view>
</view>