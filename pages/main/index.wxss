page {
  background: #f4f6ff;
}

.wrap {
  /* display: flex;
  flex-direction: column;
  justify-content: space-between; */
  height: 100vh;
  width: 100%;
}

.header {
  background: linear-gradient(#8f81f7, #4e6ef5);
  border-radius: 0 0 30rpx 30rpx;
  width: 100%;
}

.header2 {
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
}

.middle {
  width: 100%;
  flex: 1;
  overflow-y: scroll;
}

.footer {
  height: 98rpx;
}

.title {
  text-align: center;
  margin-top: 62rpx;
  color: #fff;
  margin-bottom: 30rpx;
}

.condition_box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 47rpx;
}

.condition {
  display: inline-block;
}

.condition_be {
  margin-left: 180rpx;
}

.condition_box_be {
  margin-top: 40rpx;
}

.emptycircle {
  display: inline-block;
  height: 20rpx;
  width: 20rpx;
  background: #6e77f6;
  border: 10rpx solid #fff;
  border-radius: 50%;
}

.dotcircle {
  display: inline-block;
  height: 35rpx;
  width: 35rpx;
  background: #fff;
  border-radius: 50%;
}

.condition_box .text {
  color: #fff;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.text_box image {
  height: 23rpx;
  width: 23rpx;
  display: inline-block;
  margin: 0 10rpx;
}

.content1 {
  height: 140rpx;
  width: 250rpx;
  border-radius: 20rpx;
  padding: 25rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 20rpx;
  background: linear-gradient(#8f81f7, #4e6ef5);
}

.content2 {
  height: 140rpx;
  width: 250rpx;
  border-radius: 20rpx;
  padding: 25rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 20rpx;
  background: #fff;
}

.box:nth-child(2n) {
  margin-left: 30rpx;
}

.text_box {
  position: relative;
}

.line {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.content1 .line1 {
  font-size: 30rpx;
  color: #666;
}

.content1 .line1:nth-child(1) {
  font-size: 30rpx;
  color: #fff;
}

.content1 .line2 {
  font-size: 44rpx;
  color: #fff;
}

.content2 .line1 {
  font-size: 30rpx;
  color: #666;
}

.content2 .line2 {
  font-size: 44rpx;
  color: #828bf0;
}

.white {
  color: #fff;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.echart_box {
  height: 350rpx;
  position: relative;
  margin: 0 25rpx;
  margin-top: 30rpx;
  background: #fff;
  border-radius: 20rpx;
}

.table_box {
  background: #fff;
  border-radius: 20rpx;
  margin: 30rpx 25rpx;
}

.table_title text {
  color: #666;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
