/* components/tabBar/index.wxss */
.wrap{
  position: fixed;
  top:0;
  z-index: 999;
  width: 100%;
  height: 98rpx;
  background: #FFF;
  box-shadow:0px -6rpx 15px 0px rgba(106,118,246,0.1);
  border-radius:30rpx 30rpx 0px 0px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.box{
  display: flex;
  flex-direction: row;
  justify-content: space-around;

}
.listItem{
  width: 20%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.listItem .text{
  height: 22rpx;
  line-height: 22rpx;
  color: #CCC;
  font-size: 22rpx;
}
.listItem .text1{
  height: 22rpx;
  line-height: 22rpx;
  color: #5E73F5;
  font-size: 22rpx;
}

.listItem cover-image{
  height: 35rpx;
  width: 35rpx;
  display: inline-block

}