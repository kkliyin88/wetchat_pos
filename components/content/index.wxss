/* components/content/index.wxss */
.content_wrap{
  position:fixed ;
  z-index: 1000; 
  width: 100%;
  height: 380rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-content: center;
  flex-wrap: wrap;
  background: #f4f6ff;
  box-sizing: border-box;
}
.header2 {
  z-index: 9999; 
  width: 100%;
  height: 380rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  flex-wrap: wrap;
  padding: 0 25rpx;
}
.empty_wrap{
	height:150rpx;
  width: 100%;
	border-radius: 50rpx;
	background: #4E6EF5;
  color: #4E6EF5;
	z-index: 998;
  position: absolute;
  top: -60rpx;
}
.emptycircle {
  display: inline-block;
  height: 20rpx;
  width: 20rpx;
  background: #6e77f6;
  border: 10rpx solid #fff;
  border-radius: 50%;
}
.dotcircle {
  display: inline-block;
  height: 35rpx;
  width: 35rpx;
  background: #fff;
  border-radius: 50%;
}

.condition_box .text {
  color: #fff;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.text_box image {
  height: 23rpx;
  width: 23rpx;
  display: inline-block;
  margin: 0 10rpx;
}

.content1 {
  box-sizing: border-box;
  height: 140rpx;
  width: 47%;
  border-radius: 20rpx;
  padding:25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: #8f81f7;
}

.content2 {
  height: 140rpx;
  width: 47%;
  box-sizing: border-box;
  border-radius: 20rpx;
  padding:25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: #fff;
}

.box:nth-child(2n) {
  margin-left: 30rpx;
}

.text_box {
  position: relative;
}

.line {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.content1 .line1 {
  font-size: 30rpx;
  color: #666;
}

.content1 .line1:nth-child(1) {
  font-size: 30rpx;
  color: #fff;
}
.content1 .line2 {
  font-size: 44rpx;
  color: #fff;
}
.content2 .line1 {
  font-size: 30rpx;
  color: #666;
}
.content2 .line2 {
  font-size: 44rpx;
  color: #828bf0;
}
.white {
  color: #fff;
}

