/* components/pop/index.wxss */

.wrap{
  width: 100%;
  height: 650rpx;
  position: fixed;
  bottom: 0;
  border: 1px solid green;
  z-index: 10000;
  background: #FFF;
  box-sizing: border-box;
}
.title_box{
	height: 100rpx;
	line-height: 100rpx;
	font-size: 34rpx;
	color: #333;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:center;
  margin-bottom: 20px;
}
.title{
	height: 100rpx;
	line-height: 100rpx;
}
.close{
	position: absolute;
	right: 15rpx;
}
.item{
	color: #999;
	height: 60rpx;
	line-height: 60rpx;
	width: 100%;
	text-align: center;
}

.footer{
	position: absolute;
	bottom: 0;
	height: 140rpx;
	line-height: 140rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	text-align: center;
	width: 100%;
}
.btn{
	width:500rpx ;
	height: 80rpx;
	line-height: 80rpx;
	border-radius: 35rpx;
	background: rgb(107,122,243);
	color: #FFF;
}